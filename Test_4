package kjh2023;

public class Test_4 {

	public static void main(String[] args) {
		int sum = 0;
		//1부터 20까지의 정수 중 3의 배수의 합
		for(int i=1; i<=20; i++) {
			// 1~20까지
	   if(i%3==0) { // 3의 배수냐? - 3으로 나뉬을때  나머지가 0이다.
		  sum = sum + i;
	      System.out.println("sum:"+sum);
	   }
		
     }
      System.out.println("최종 sum:"+ sum);
	}

}
